<%- include("../partials/header") %>
<link rel="stylesheet" href="/style/verificationForm.css">
</head>

<body>
    <%if(errorMessage) { %>
        <div>
            <p class="flash-message flash-message--error"><%=errorMessage%></p>
        </div>
    <% } %>
    <div class="verification-section">
        <div class="verification-form">
            <div class="verification-header">
                <img src="./images/img/logo.png" alt="School Logo">
                <h1>Technological University Mawlamyine</h1>
            </div>
            <div class="verification-body">
                <h1 class="header">Verification Form</h1>
                <form action="/verification" method="POST">
                    <div class="left">
                        <div class="form-group">
                            <label for="attendenceYear">သင်တန်းနှစ်</label>
                            <select name="attendenceYear" id="attendenceYear">
                                <option value="">Select one</option>
                                <option value="firstYear">ပထမနှစ်</option>
                                <option value="secondYear">ဒုတိယနှစ်</option>
                                <option value="thirdYear">တတိယနှစ်</option>
                                <option value="fourthYear">စတုတ္ထနှစ်</option>
                                <option value="fifthYear">ပဥ္စမနှစ်</option>
                                <option value="sixthYear">ဆဌမနှစ်</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="major">သင်တန်းအမည်</label>
                            <select name="major" id="major">
                                <option value="">Select one</option>
                                <option value="civil">Civil Engineering</option>
                                <option value="ec">Electronic and Communication Engineering</option>
                                <option value="ep">Electrical Power Engineering</option>
                                <option value="mech">Mechnical Engineering</option>
                                <option value="it">Information Technology Engineering</option>
                            </select>
                        </div>
                    </div>
                    <div class="right">
                        <div class="form-group">
                            <label for="g10Rollno">ဆယ်တန်းခုံနံပါတ်</label>
                            <input type="text" name="g10Rollno" id="g10Rollno">
                        </div>
                        <div class="form-group">
                            <label for="g10Year">တက္ကသိုလ်စတင်တတ်ရောက်သည့်နှစ်</label>
                            <input type="text" name="g10Year" id="g10Year">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <button>Search</button>
                </form>
            </div>
            <hr>
        </div>
    </div>
<%- include("../partials/footer") %>